<div class="dropdown">
    <h4 class="btn btn-secundary dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-expanded="false" style="color: #dbdbdb"> Categorias</h4>
    <ul class="dropdown-menu">
        @foreach(var categoria in Model){
            <li>
                <a class="dropdown-item" asp-controller="Produto" asp-action="List" asp-route-categoria="@categoria.CategoriaName">@categoria.CategoriaName</a>
            </li>
        }

        <li class="dropdown-divider"></li>

        <a class="dropdown-item" asp-controller="Produto" asp-action="List" asp-route-categoria="">Todos os Produtos</a>
    </ul>
</div>
